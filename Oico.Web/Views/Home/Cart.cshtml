@model CartViewModel
@{
    ViewData["Title"] = "Buyurtma";
}

<!-- Breadcrumb Section Begin -->
<section class="breadcrumb-section set-bg" data-setbg="/img/breadcumb-hero.jpg">
    <div class="container">
        <div class="row">
            <div class="col-lg-12 text-center">
                <div class="breadcrumb__text">
                    <h2>Xaridlar</h2>
                </div>
            </div>
        </div>
    </div>
</section>
<!-- Breadcrumb Section End -->

<!-- Shoping Cart Section Begin -->
<section class="shoping-cart spad">
    <div class="container">
        <div class="row">
            <div class="col-lg-12">
                <div class="shoping__cart__table">
                    <table>
                        <thead>
                            <tr>
                                <th class="shoping__product">Xaridlar</th>
                                <th>Narxi</th>
                                <th>Soni</th>
                                <th>Qiymati</th>
                            </tr>
                        </thead>
                        <tbody>
                            @for (int i = 0; i < Model.Products.Count(); i++)
                            {
                                <tr>
                                    <td class="shoping__cart__item">
                                        <img src="img/product/@Model.Products.ElementAt(i).ImageUrl" alt="image">
                                        <h5>@Model.Products.ElementAt(i).Name</h5>
                                    </td>
                                    <td class="shoping__cart__price">
                                        @Model.Products.ElementAt(i).Price so'm
                                    </td>
                                    <td class="shoping__cart__quantity">
                                        @Model.CountOfProduct[i]
                                    </td>
                                    <td class="shoping__cart__total">
                                        @(Model.Products.ElementAt(i).Price * Model.CountOfProduct[i]) so'm
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
        <form asp-controller="home" asp-action="order" method="post">
            <div class="row">
                <div class="col-lg-12">
                    <div class="shoping__cart__btns">
                        <a asp-controller="home" asp-action="products" class="primary-btn cart-btn cart-btn-right">
                            <span class="icon_loading"></span>
                            Yana xarid
                        </a>
                    </div>
                </div>
                <div class="col-lg-6">
                    <div class="shoping__continue">
                        <div class="shoping__discount">
                            <h5>Shaxsiy ma'lumotlar</h5>
                            <input type="text" placeholder="Ismingiz" class="form-control" required asp-for="Username"><br />
                            <input type="text" placeholder="Telefon raqamingiz" class="form-control" required asp-for="Phone">
                            @for (int i = 0; i < Model.Products.Count(); i++)
                            {
                                <input hidden asp-for="@Model.Products.ElementAt(i).Id" />
                                <input hidden asp-for="@Model.Products.ElementAt(i).Name" />
                                <input hidden asp-for="@Model.Products.ElementAt(i).Price" />
                                <input hidden asp-for="@Model.Products.ElementAt(i).WholesalePrice" />
                                <input hidden asp-for="@Model.Products.ElementAt(i).NumberOfBox" />
                                <input hidden asp-for="@Model.Products.ElementAt(i).NumberOfBoxes" />
                                <input hidden asp-for="@Model.Products.ElementAt(i).Massa" />
                                <input hidden asp-for="@Model.Products.ElementAt(i).ImageUrl" />
                                <input hidden asp-for="@Model.CountOfProduct[i]" />
                            }
                        </div>
                    </div>
                </div>
                <div class="col-lg-6">
                    <div class="shoping__checkout">
                        <h5>Jami summa</h5>
                        <ul>
                            <li>Chegirmalar <span>0%</span></li>
                            <li>
                                Jami
                                @{
                                    int sum = 0;

                                    for (int i = 0; i < Model.CountOfProduct.Count(); i++)
                                    {
                                        sum += Model.Products.ElementAt(i).Price * Model.CountOfProduct.ElementAt(i);
                                    }

                                    string s = string.Empty;
                                    string rad = string.Empty;

                                    while (true)
                                    {
                                        if (sum.ToString().Length <= 3)
                                        {
                                            s = sum.ToString() + " " + s;
                                            break;
                                        }

                                        rad = sum % 1000 == 0 ? "000" : (sum % 1000).ToString();

                                        s = s.Insert(0, rad);

                                        sum = sum / 1000;
                                    }

                                    <span>@s so'm</span>
                                }
                            </li>
                        </ul>
                        <button type="submit" class="btn btn-primary w-100"><i class="fas fa-wallet"></i> Buyurtma berish</button>
                    </div>
                </div>
            </div>
        </form>
    </div>
</section>
<!-- Shoping Cart Section End -->