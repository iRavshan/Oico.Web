                                                    <a asp-controller="admin" asp-action="order" asp-route-Id="@item.Id" class="btn btn-outline-primary">Batafsil</a>
                                                </td>
                                            </tr>
                                        }
                                    </tbody>
                                </table>
                            </div>
                        }
                        @if (Model.OrdersOnWeek.Count() == 0)
                        {
                            <p class="text-center mt-3">Hozircha haftalik bajarilgan buyurtmalar yo'q</p>
                        }
                    </div>
                    <div class="tab-pane fade" id="contact" role="tabpanel" aria-labelledby="contact-tab">
