@model OrdersViewModel
@{
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
    ViewData["Title"] = "Buyurtmalar";
}

<div class="container" style="margin-top: 100px;">
    <div class="row">
        <div class="col-lg-12">
            <div class="admin-root">
                <h3>Yangi buyurtmalar</h3>
                @if (Model.NewOrders.Count() != 0)
                {
                    <div class="shoping__cart__table mt-4">
                        <table>
                            <thead>
                                <tr>
                                    <th>Buyurtmachi</th>
                                    <th>Telefon raqam</th>
                                    <th>Buyurtma vaqti</th>
                                    <th>To'lov summasi</th>
                                    <th></th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var item in Model.NewOrders)
                                {
                                    <tr>
                                        <td class="shoping__cart__price">
                                            <h5>@item.Client</h5>
                                        </td>
                                        <td class="shoping__cart__price">
                                            @item.PhoneNumber
                                        </td>
                                        <td class="shoping__cart__quantity">
                                            @item.AcceptedTime.ToString("dd.MM.yyyy HH:mm")
                                        </td>
                                        <td class="shoping__cart__total">
                                            @item.Sum
                                        </td>
                                        <td class="shoping__cart__total">
                                            <a asp-controller="admin" asp-action="order" asp-route-Id="@item.Id" class="btn btn-outline-primary">Batafsil</a>
                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                }
                @if (Model.NewOrders.Count() == 0)
                {
                    <p class="text-center mt-3">Hozircha yangi buyurtmalar yo'q</p>
                }
            </div>
        </div>
        <div class="col-lg-12">
            <div class="admin-root mt-5">
                <h3>Barcha bajarilgan buyurtmalar</h3>
                <ul class="nav nav-tabs mt-3" id="myTab" role="tablist">
                    <li class="nav-item">
                        <a class="nav-link active" id="home-tab" data-toggle="tab" href="#home" role="tab" aria-controls="home"
                           aria-selected="true">Bugunlik</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" id="profile-tab" data-toggle="tab" href="#profile" role="tab" aria-controls="profile"
                           aria-selected="false">Haftalik</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" id="contact-tab" data-toggle="tab" href="#contact" role="tab" aria-controls="contact"
                           aria-selected="false">Oylik</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" id="year-tab" data-toggle="tab" href="#year" role="tab" aria-controls="year"
                           aria-selected="false">Yillik</a>
                    </li>
                </ul>
                <div class="tab-content" id="myTabContent">
                    <div class="tab-pane fade show active" id="home" role="tabpanel" aria-labelledby="home-tab">
                        @if (Model.OrdersOnToday.Count() != 0)
                        {
                            <div class="shoping__cart__table mt-4">
                                <table>
