                                            <th>Buyurtma vaqti</th>
                                            <th>To'lov summasi</th>
                                            <th></th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                        @foreach (var item in Model.OrdersOnToday)
                                        {
                                            <tr>
                                                <td class="shoping__cart__price">
                                                    <h5>@item.Client</h5>
                                                </td>
                                                <td class="shoping__cart__price">
                                                    @item.PhoneNumber
                                                </td>
                                                <td class="shoping__cart__quantity">
                                                    @item.AcceptedTime.ToString("dd.MM.yyyy hh:mm")
                                                </td>
                                                <td class="shoping__cart__total">
                                                    @item.Sum
                                                </td>
                                                <td class="shoping__cart__total">
                                                    <a asp-controller="admin" asp-action="order" asp-route-Id="@item.Id" class="btn btn-outline-primary">Batafsil</a>
                                                </td>
                                            </tr>
                                        }
                                    </tbody>
                                </table>
                            </div>
                        }
                        @if (Model.OrdersOnToday.Count() == 0)
                        {
                            <p class="text-center mt-3">Hozircha bugun bajarilgan buyurtmalar yo'q</p>
                        }
                    </div>
                    <div class="tab-pane fade" id="profile" role="tabpanel" aria-labelledby="profile-tab">
