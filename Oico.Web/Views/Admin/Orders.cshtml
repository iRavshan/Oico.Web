                                                <td class="shoping__cart__total">
                                                    <a asp-controller="admin" asp-action="order" asp-route-Id="@item.Id" class="btn btn-outline-primary">Batafsil</a>
                                                </td>
                                            </tr>
                                        }
                                    </tbody>
                                </table>
                            </div>
                        }
                        @if (Model.OrdersOnYear.Count() == 0)
                        {
                            <p class="text-center mt-3">Hozircha yillik bajarilgan buyurtmalar yo'q</p>
                        }
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

